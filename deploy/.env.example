APPWRITE_MCP_TRANSPORT=streamable-http
APPWRITE_MCP_ENABLE_STREAMABLE_HTTP=true
APPWRITE_MCP_HTTP_HOST=0.0.0.0
APPWRITE_MCP_HTTP_PORT=8080
APPWRITE_MCP_HTTP_PATH=/mcp
APPWRITE_MCP_ALLOW_REMOTE_HTTP=true

APPWRITE_MCP_CONFIRM_SECRET=appwrite-mcp-dev-secret
APPWRITE_MCP_ENABLE_PROJECT_MANAGEMENT=false
APPWRITE_MCP_TARGET_ALIASES={}
APPWRITE_MCP_DISALLOW_LEGACY_AUTH_USERS_UPDATE=false

APPWRITE_MCP_HTTP_TIMEOUT_MS=10000
APPWRITE_MCP_HTTP_MAX_RETRIES=2
APPWRITE_MCP_HTTP_RETRY_BASE_DELAY_MS=100
APPWRITE_MCP_HTTP_RETRY_MAX_DELAY_MS=2000
APPWRITE_MCP_HTTP_RETRY_STATUS_CODES=408,425,429,500,502,503,504

APPWRITE_PROJECT_AUTH_FILE=/app/deploy/config/project-auth.json
APPWRITE_PROJECT_AUTH_FILE_HOST=./config/project-auth.json
